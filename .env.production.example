# ════════════════════════════════════════════════════════
# RENDER.COM / PRODUCTION CONFIGURATION
# Set these as Environment Variables in Render dashboard
# ════════════════════════════════════════════════════════

# Application
NODE_ENV=production
PORT=3001

# Frontend URL (your Netlify URL)
# Use comma-separated list if you have multiple frontends
FRONTEND_URL=https://your-app.netlify.app

# Session Configuration
# Use a long random string - e.g. generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=REPLACE_WITH_STRONG_RANDOM_SECRET_64_CHARS_MINIMUM
SESSION_NAME=gamehub.sid
SESSION_MAX_AGE=86400000

# Redis - DISABLED (using in-memory, sufficient for single-server Render deployment)
# If you scale to multiple instances, enable Redis and provide credentials
USE_REDIS=false

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Game Configuration
MAX_ROOMS=1000
ROOM_EXPIRY_MINUTES=120
MAX_PLAYERS_PER_ROOM=4
